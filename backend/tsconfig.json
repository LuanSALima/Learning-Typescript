{
    "compilerOptions": {
        "target": "es2017",
        "lib": ["es6"],
        "module": "commonjs",
        "rootDir": "./src",
        "baseUrl": ".",
        "paths": {
            "@controllers/*": ["./src/Controllers/*"],
            "@models/*": ["./src/Models/*"],
            "@config/*": ["./src/Config/*"]
        },
        "typeRoots": [
            "./node_modules/@types",
            "./src/@types"
        ],
        "resolveJsonModule": true,
        "allowJs": true,
        "outDir": "./dist",
        "removeComments": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    }
}
